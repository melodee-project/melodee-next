{
  "dashboard": {
    "id": null,
    "title": "Melodee System Dashboard - SLO Focused",
    "tags": ["melodee", "slo", "availability", "latency", "error-rate", "capacity"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Availability",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"melodee-api\"}",
            "legendFormat": "API Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.98}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 2,
        "title": "Melodee API Error Rate (SLO: <0.1%)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\", handler=~\"/api/.*\"}[5m])) / sum(rate(http_requests_total{handler=~\"/api/.*\"}[5m]))",
            "legendFormat": "Melodee API Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.001},
                {"color": "red", "value": 0.01}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 3,
        "title": "OpenSubsonic API Error Rate (SLO: <0.1%)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\", handler=~\"/rest/.*\"}[5m])) / sum(rate(http_requests_total{handler=~\"/rest/.*\"}[5m]))",
            "legendFormat": "OpenSubsonic API Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.001},
                {"color": "red", "value": 0.01}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 4,
        "title": "Combined API Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\", handler=~\"/(api|rest)/.*\"}[5m])) / sum(rate(http_requests_total{handler=~\"/(api|rest)/.*\"}[5m]))",
            "legendFormat": "Combined API Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.001},
                {"color": "red", "value": 0.01}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 5,
        "title": "Melodee API Latency p95 (SLO: <500ms)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_duration_seconds_bucket{handler=~\"/api/.*\"}[5m])))",
            "legendFormat": "Melodee p95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 6,
        "title": "OpenSubsonic API Latency p95 (SLO: <500ms)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_duration_seconds_bucket{handler=~\"/rest/.*\"}[5m])))",
            "legendFormat": "OpenSubsonic p95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"melodee\"}",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "id": 8,
        "title": "Active Queue Depths",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "asynq_queue_processed_total",
            "legendFormat": "Processed Queue Items"
          },
          {
            "expr": "asynq_queue_pending_total",
            "legendFormat": "Pending Queue Items"
          },
          {
            "expr": "asynq_queue_failed_total",
            "legendFormat": "Failed Queue Items"
          }
        ]
      },
      {
        "id": 9,
        "title": "API Request Rate by Type",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{handler=~\"/api/.*\"}[5m]))",
            "legendFormat": "Melodee API Requests/sec"
          },
          {
            "expr": "sum(rate(http_requests_total{handler=~\"/rest/.*\"}[5m]))",
            "legendFormat": "OpenSubsonic API Requests/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Capacity Usage by Library",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "melodee_capacity_percent",
            "legendFormat": "{{path}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Processing Queue Lengths",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "melodee_processing_queue_length",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 12,
        "title": "System Resource Utilization",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "process_cpu_seconds_total",
            "legendFormat": "CPU Time"
          },
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "Memory Usage"
          }
        ]
      },
      {
        "id": 13,
        "title": "Library Processing Pipeline Status",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "melodee_pipeline_state_count",
            "legendFormat": "{{state}} - Library: {{library}}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "5s"
  },
  "folderId": 0,
  "overwrite": true
}